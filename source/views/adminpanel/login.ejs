<html lang="en">
  <head>
    <base href="./">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta name="description" content="CoreUI - Open Source Bootstrap Admin Template">
    <meta name="author" content="Łukasz Holeczek">
    <meta name="keyword" content="Bootstrap,Admin,Template,Open,Source,jQuery,CSS,HTML,RWD,Dashboard">
    <title><%pageAdminTitle%></title>
    <!-- Icons-->
    <link href="<%=staticUrl%>/public/coreui/vendors/@coreui/icons/css/coreui-icons.min.css" rel="stylesheet">
    <link href="<%=staticUrl%>/public/coreui/vendors/flag-icon-css/css/flag-icon.min.css" rel="stylesheet">
    <link href="<%=staticUrl%>/public/coreui/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="<%=staticUrl%>/public/coreui/vendors/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">
    <!-- Main styles for this application-->
    <link href="<%=staticUrl%>/public/coreui/css/style.css" rel="stylesheet">
    <link href="<%=staticUrl%>/public/coreui/vendors/pace-progress/css/pace.min.css" rel="stylesheet">

    <script src="<%=staticUrl%>/public/coreui/vendors/jquery/js/jquery.min.js"></script>
    <script src="<%=staticUrl%>/public/javascripts/common.js"></script>
    <script>
    function show_message(type, message){
        $(document).ready(function(){
                $('#message_box').fadeIn(1000);
                $('#message_box').html('<span class="icon-star"></span>' + ' ' + message);
                if(type == 'success')
                {
                    $('#message_box').addClass('alert-success');
                }
                else if(type == 'error'){
                    $('#message_box').addClass('alert-danger');
                }        
                setInterval(function(){ $('#message_box').fadeOut(1000); }, 3000);
            });    
        }    
    </script>
  </head>
  <body class="app flex-row align-items-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card-group">
            <div class="card p-4">
                <form action = "" method = "POST" name="loginForm" id="loginForm" enctype="application/x-www-form-urlencoded">
                    <div class="card-body">
                        <div class="input-group mb-4">
                            <div id="message_box" class="alert" style="font-weight:bold;position:fixed;z-index:9999;width:310px;display:none;">                         
                            </div>
                            <% if (messages.message_success) { %>
                            <script>
                                show_message('success', '<%-messages.message_success%>');
                            </script>              
                            <% } %>
                            <% if (messages.message_error) { %>
                            <script>
                                show_message('error', '<%-messages.message_error%>');
                            </script>              
                            <% } %>
                        </div>

                        <h1>Login</h1>
                        <p class="text-muted">Đăng nhập vào tài khoản của bạn</p>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                <i class="icon-user"></i>
                            </span>
                            </div>
                            <input class="form-control" type="text" placeholder="Username" name="username">
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-lock"></i>
                                </span>
                            </div>
                            <input class="form-control" type="password" placeholder="Password" name="password">
                        </div>
                        <div class="input-group mb-4">
                            <div class="g-recaptcha" data-sitekey="<%=recaptcha.sitekey%>"></div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-primary px-4" type="submit">Login</button>
                            </div>
                            <div class="col-6 text-right">
                                <a class="btn btn-link px-0" href="#" >Quên mật khẩu</a>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf" id="_csrf" value="<%= csrftoken %>">
                </form>
            </div>
            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
              <div class="card-body text-center">
                <div>
                  <h2><%=pageAdminTitle%></h2>
                  <p><%=pageAdminDes%></p>
                  <!--<button class="btn btn-primary active mt-3" type="button">Register Now!</button>-->
                </div>
              </div>
            </div>            
          </div>
        </div>
      </div>
    </div>    
    <!-- CoreUI and necessary plugins-->    
    <script src="<%=staticUrl%>/public/coreui/vendors/popper.js/js/popper.min.js"></script>
    <script src="<%=staticUrl%>/public/coreui/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="<%=staticUrl%>/public/coreui/vendors/pace-progress/js/pace.min.js"></script>
    <script src="<%=staticUrl%>/public/coreui/vendors/perfect-scrollbar/js/perfect-scrollbar.min.js"></script>
    <script src="<%=staticUrl%>/public/coreui/vendors/@coreui/coreui/js/coreui.min.js"></script>
    <script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script> 
  </body>
</html>