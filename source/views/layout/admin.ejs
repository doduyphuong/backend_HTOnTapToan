    <footer class="app-footer">
      <div>
        <a href="https://coreui.io" target="blank">CoreUI</a>
        <span>&copy; 2018 Adtima.</span>
      </div>
      <div class="ml-auto">
        <span>Powered by</span>
        <a href="https://adtima.vn">Adtima</a>
      </div>
    </footer>
    
    <script>
      $(document).ready(function(){
        generate_csrf_token_form('<%= csrftoken %>');
      });
    </script>
    
    <!-- CoreUI and necessary plugins-->    
    <script src="<%=staticUrl%>/public/coreui/vendors/popper.js/js/popper.min.js"></script>
    <script src="<%=staticUrl%>/public/coreui/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="<%=staticUrl%>/public/coreui/vendors/pace-progress/js/pace.min.js"></script>
    <script src="<%=staticUrl%>/public/coreui/vendors/perfect-scrollbar/js/perfect-scrollbar.min.js"></script>
    <script src="<%=staticUrl%>/public/coreui/vendors/@coreui/coreui/js/coreui.min.js"></script>
    <script>
      $(document).ready(function(){
        $.get(baseUrl + '/adminpanel/base/ex_module_menu', function(data){
          $('#admin_nav_menu').append(data);
        });
      });
    </script>
    <div id="uploadPhotoUsingCropperJSModal" class="modal" role="dialog">
        <div class="modal-dialog" id="modal-cropjs-dialog">
            <!-- Modal content-->
            <div class="modal-content" id="modal-cropjs-content">
                <div class="modal-header">
                    <button type="button" class="" data-dismiss="modal">&times;</button>
                    <h5 class="modal-title">Upload photo</h5>
                </div>
                <div class="modal-body">
                    <div id="uploadPhotoCropperImg">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnCropImage">Crop</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>   

  </body>
</html>