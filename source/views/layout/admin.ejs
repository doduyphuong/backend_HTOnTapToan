  <body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">   
    <header class="app-header navbar">
      <button class="navbar-toggler sidebar-toggler d-lg-none mr-auto" type="button" data-toggle="sidebar-show">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="<%=baseUrl%>/adminpanel/">
        <%=appName%>
      </a>
      <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button" data-toggle="sidebar-lg-show">
        <span class="navbar-toggler-icon"></span>
      </button>
     
      <ul class="nav navbar-nav ml-auto">       
        <li class="nav-item">
          <a title="Update or renew your session" class="nav-link" href="<%=baseUrl%>/adminpanel/renew-session"><span class="fa fa-refresh"></span></a>
        </li>
        <li class="nav-item dropdown">    
          <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            <%=user_data.fullname%>
          </a>
          <div class="dropdown-menu dropdown-menu-right">            
            <a class="dropdown-item" href="<%=baseUrl%>/adminpanel/profile/changepassword">
              <i class="fa fa-edit"></i> Change password</a>
            <a class="dropdown-item" href="<%=baseUrl%>/adminpanel/profile/changeavatar">
              <i class="fa fa-edit"></i> Change avatar</a>
            <a class="dropdown-item" href="<%=baseUrl%>/adminpanel/profile/">
              <i class="fa fa-cubes"></i> Profile</a>            
            <a class="dropdown-item" href="<%=baseUrl%>/adminpanel/logout">
              <i class="fa fa-sign-out"></i> Logout</a>
          </div>
        </li>
      </ul>
      <button class="navbar-toggler aside-menu-toggler d-md-down-none" type="button" data-toggle="aside-menu-lg-show">
        <!--<span class="navbar-toggler-icon"></span>-->
      </button>
      <button class="navbar-toggler aside-menu-toggler d-lg-none" type="button" data-toggle="aside-menu-show">
        <span class="navbar-toggler-icon"></span>
      </button>
    </header>
    <div class="app-body">
      <div class="sidebar">
        <%var is_root = user_data.is_root%>        
        <nav class="sidebar-nav">
          <ul class="nav" id="admin_nav_menu">
            <li class="nav-item">
              <a class="nav-link" href="<%=baseUrl%>/adminpanel/">
                <i class="nav-icon icon-speedometer"></i> Dashboard
                <span class="badge badge-primary">Adtima</span>
              </a>
            </li>
            <%if(is_root == 1){%>
              <li class="nav-item nav-dropdown">
                <a class="nav-link nav-dropdown-toggle" href="javascript:void(0);">
                  <i class="nav-icon icon-puzzle"></i> System
                </a>
                <ul class="nav-dropdown-items">
                  <li class="nav-item">
                    <a class="nav-link" href="<%=baseUrl%>/adminpanel/manage_module/">
                      Module manage</a>
                  </li>     
                  <li class="nav-item">
                    <a class="nav-link" href="<%=baseUrl%>/adminpanel/manage_admin_log/">
                      Manage log</a>
                  </li>            
                  <li class="nav-item">
                    <a class="nav-link" href="<%=baseUrl%>/adminpanel/manage_config_setting/">
                      Config setting</a>
                  </li>  
                </ul>
              </li>            
              <li class="nav-item nav-dropdown">
                <a class="nav-link nav-dropdown-toggle" href="javascript:void(0);">
                  <i class="nav-icon icon-puzzle"></i> Backend user
                </a>
                <ul class="nav-dropdown-items">
                <li class="nav-item">
                  <a class="nav-link" href="<%=baseUrl%>/adminpanel/manage_user_group/">
                    Group</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%=baseUrl%>/adminpanel/manage_role/">
                    Role</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%=baseUrl%>/adminpanel/permission_role/manages">
                    Role Permissions</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%=baseUrl%>/adminpanel/manage_user/">
                    User</a>
                </li>  
                </ul>
              </li>
            <%}%>
            
            <li class="nav-title"><i class="fa fa-map"></i> Ex Modules</li>
          </ul>
        </nav>
        <button class="sidebar-minimizer brand-minimizer" type="button"></button>
      </div>
      <main class="main">
        <div id="message_box" class="alert" style="font-weight:bold;position:fixed;z-index:9999;width:100%;display:none;">                         
        </div>
        <% if (messages.message_success) { %>
          <script>
              show_message('success', '<%-messages.message_success%>');
          </script>              
        <% } %>
        <% if (messages.message_error) { %>
          <script>
              show_message('error', '<%-messages.message_error%>');
          </script>              
        <% } %>
        <!-- Breadcrumb-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%=appName%></li>
          <li class="breadcrumb-item">
            <a href="<%=adminControllerIndex%>"><%=adminController%></a>
          </li>
          <li class="breadcrumb-item active"><%=adminAction%></li>
          <!-- Breadcrumb Menu-->
          <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">   
              <% if(adminController != 'report') {%>           
                <a class="btn" href="<%=baseUrl%>/adminpanel/report/standard/<%=adminController%>">
                  <i class="icon-graph"></i> Â Report
                </a>
              <% } %>              
            </div>
          </li>
        </ol>    
        <div class="container-fluid">          
            <!--body-->    
            <%-body -%>
            <!--end body-->
        </div>
      </main>     
